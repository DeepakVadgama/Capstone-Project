<LinearLayout android:id="@+id/widget"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/primary"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
        android:id="@+id/widget_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/primary_light"
        tools:text="&quot; Arise! Awake! And Stop not until the goal is achieved &quot;"/>

        <TextView
            android:id="@+id/widget_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="@dimen/title_top_padding"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_secondary_light"
            tools:text="Swami Vivekanand"/>

</LinearLayout>